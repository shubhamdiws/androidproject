<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background=" #ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SignUp_page">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/android"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="40dp">

    </ImageView>



    <EditText
        android:id="@+id/snup_fname"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp"
        android:hint="Enter First Name"
        android:textSize="13sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="@drawable/textviewcorner"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

    </EditText>

    <EditText
        android:id="@+id/snup_Lname"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp"
        android:hint="Enter Last Name"
        android:textSize="13sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="@drawable/textviewcorner"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

    </EditText>

    <EditText
        android:id="@+id/snup_Email"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:maxLength="29"
        android:maxLines="1"
        android:padding="10dp"
        android:hint="Ente Your Email"
        android:textSize="13sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="@drawable/textviewcorner"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

    </EditText>
    <EditText
        android:id="@+id/snup_phone"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="10dp"
        android:hint="Your Phone "
        android:textSize="13sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="@drawable/textviewcorner"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

    </EditText>

    <Button
        android:id="@+id/sgnup_But"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonstyle"
        android:hint="SIGNUP"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="15dp"></Button>









</LinearLayout>